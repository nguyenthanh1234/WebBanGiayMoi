@model WebBanGiayMoi.Models.Giay

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="thumbnail">
            <img src="@Html.DisplayFor(model => model.Hinh)" alt="thumbnail" width="500px">
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="caption">
            <h1>@Html.DisplayFor(model => model.Name)</h1>
            @{
                var gia = Model.Gia;
            }
            <strong style="color:#f57224; font-size: 24px"> @gia.ToString("#,##0 VND")</strong>
            @{
                var mota = Model.Description;
            }
            <div style="margin: 30px 0 5px 0">
                <strong style="font-size:15px">Mô tả:</strong> 
                <br>@Html.Raw(mota.Replace("\n", "</br>"))
            </div>
            <div><strong>Thương hiệu: </strong> @Model.Brand.Name</div>
            <div style="margin:5px 0 5px 0"><strong>Danh mục: </strong>@Model.Category.Name</div>
            @using (Html.BeginForm("AddtoCart", "ShoppingCart"))
            {
                int id = Model.Id;

                <strong style="font-size:15px">Số lượng: </strong>
                <input type="number" name="soLuong" value="1" required  min="1" max="100" />
                <div class="form-group">
                </div>
                <input type="hidden" value="@Model.Id" name="idpro" required />
                <br />
                <input type="submit" value="Buy" class="btn btn-success" />
                @Html.ActionLink("Back", "Index", "", new { @class = "btn btn-info" })
            }

        </div>
    </div>
</div>

